@model KinderGal.Models.Assigne

@{
    ViewBag.Title = "Upload Assignment";
}
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/images/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="images/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>KinderGals</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->
    <link href="~/css/2bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="~/css/2animate.min.css" rel="stylesheet" />
    <!--  Paper Dashboard core CSS    -->
    <link href="~/css/2paper-dashboard.css" rel="stylesheet" />

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/css/2demo.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="~/css/2themify-icons.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="white">
            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text">
                        KINDERGAL
                    </a>
                </div>
                <ul class="nav">
                    <li>
                        <a href="dashboardTeacher.html">
                            <i class="ti-panel"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="userT.html">
                            <i class="ti-user"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li>
                        <a href="tableT.html">
                            <i class="ti-view-list-alt"></i>
                            <p>Student List</p>
                        </a>
                    </li>
                    <li>
                        <a href="MessagesT.html">
                            <i class="ti-text"></i>
                            <p>Messages</p>
                        </a>
                    </li>
                    <li>

                        <a href="notificationsT.html">
                            <i class="ti-bell"></i>
                            <p>Notifications</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">

                        <a class="navbar-brand">Assignments</a>
                    </div>


                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <div class="navbar-header">


                                <a class="navbar-brand" href="dashboardTeacher.html">Back</a>


                                <a class="navbar-brand" href="index.html">LOG OFF</a>
                            </div>
                        </ul>
                    </div>
                </div>
            </nav>

            <p style="font-size:40px;color:black"><b>Upload</b></p>



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="color:black">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="color:black">
                        @Html.LabelFor(model => model.Assignment, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" style="color:black">
                            @Html.EditorFor(model => model.Assignment, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Assignment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="color:black">
                        @Html.LabelFor(model => model.Date_Time, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" style="color:black">
                            @Html.EditorFor(model => model.Date_Time, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date_Time, "Format(MM//DD//YYYY)", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="color:black">
                            <input type="submit" value="Upload" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
</body>
<script src="~/js/2jquery.min.js" type="text/javascript"></script>
<script src="~/js/2bootstrap.min.js" type="text/javascript"></script>
<!--  Checkbox, Radio & Switch Plugins -->
<script src="~/js/2bootstrap-checkbox-radio.js"></script>
<!--  Charts Plugin -->
<script src="~/js/2chartist.min.js"></script>
<!--  Notifications Plugin    -->
<script src="~/js/2bootstrap-notify.js"></script>
<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
<!-- Paper Dashboard Core javascript and methods for Demo purpose -->
<script src="~/js/2paper-dashboard.js"></script>
<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="~/js/2demo.js"></script>

<div>
    @Html.ActionLink("Back", "Assignments")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
